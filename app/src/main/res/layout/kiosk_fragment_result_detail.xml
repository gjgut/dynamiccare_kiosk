<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1f21">

    <LinearLayout
        android:id="@+id/TopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/action_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_margin_big"
            android:layout_marginTop="@dimen/general_margin_mid"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/point" />

            <TextView
                android:id="@+id/txt_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/general_margin_small"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="측정 그래프"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/graph_label"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mes_res_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopLayout">

        <ImageView
            android:id="@+id/detail_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="@dimen/detail_padding"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/body_shape" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_margin_big"
            android:layout_marginEnd="@dimen/general_margin_big"
            android:layout_weight="3"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/txt_detail_cont_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text=" 벤치프레스 대흉근"
                android:textColor="#ffee00"
                android:textSize="@dimen/detail_text_big" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_margin_mid"
                android:layout_weight="3"
                android:gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/general_margin_mid"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="시작 무게"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/detail_text_small" />

                    <ProgressBar
                        android:id="@+id/progressBar_start"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/detail_progress"
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:background="#00FFFFFF"
                        android:backgroundTint="#00707070"
                        android:max="300000"
                        android:progress="50"
                        android:progressBackgroundTint="#707070"
                        android:progressDrawable="@drawable/custom_progressbar"
                        android:progressTint="#FFDD03"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0kg"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/detail_text_small" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/general_margin_mid"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="평균 무게"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/detail_text_small" />

                    <ProgressBar
                        android:id="@+id/progressBar_average"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/detail_progress"
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:background="#00FFFFFF"
                        android:backgroundTint="#707070"
                        android:max="300000"
                        android:progress="50"
                        android:progressBackgroundTint="#707070"
                        android:progressDrawable="@drawable/custom_progressbar"
                        android:progressTint="#FFDD03"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0kg"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/detail_text_small" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/general_margin_mid"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="최대 무게"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/detail_text_small" />

                    <ProgressBar
                        android:id="@+id/progressBar_max"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/detail_progress"
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:background="#00FFFFFF"
                        android:backgroundTint="#707070"
                        android:max="300000"
                        android:progress="50"
                        android:progressBackgroundTint="#707070"
                        android:progressDrawable="@drawable/custom_progressbar"
                        android:progressTint="#FFDD03"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0kg"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/detail_text_small" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/general_margin_mid"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="최소 무게"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/detail_text_small" />

                    <ProgressBar
                        android:id="@+id/progressBar_min"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/detail_progress"
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:background="#00FFFFFF"
                        android:backgroundTint="#707070"
                        android:max="300000"
                        android:progress="50"
                        android:progressBackgroundTint="#707070"
                        android:progressDrawable="@drawable/custom_progressbar"
                        android:progressTint="#FFDD03"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0kg"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/detail_text_small" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
