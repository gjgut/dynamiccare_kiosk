<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1f21">

    <ImageView
        android:id="@+id/exp_body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/explain_margin_top"
        android:layout_marginBottom="@dimen/explain_margin_bottom"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/buttons_mes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/body_shape_crop" />

    <TableLayout
        android:id="@+id/buttons_mes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp">

            <ImageButton
                android:id="@+id/mes_btn_bench"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#37393e"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/btn_bench" />

            <ImageButton
                android:id="@+id/mes_btn_squat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#37393e"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/btn_squat" />

            <ImageButton
                android:id="@+id/mes_btn_deadlift"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#37393e"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/btn_dead" />

            <ImageButton
                android:id="@+id/mes_btn_shoulderpress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#37393e"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/btn_press" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp">

            <ImageButton
                android:id="@+id/mes_btn_carfraise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#37393e"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/btn_carf" />

            <ImageButton
                android:id="@+id/mes_btn_armcurl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#37393e"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/btn_curl" />

            <ImageButton
                android:id="@+id/mes_btn_armextension"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#37393e"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/btn_extension" />

            <ImageButton
                android:id="@+id/mes_btn_latpulldown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#37393e"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/btn_latpulldown" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
