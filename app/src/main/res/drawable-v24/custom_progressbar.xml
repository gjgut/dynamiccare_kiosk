<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#3993de"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:endColor="#d13333"
                    android:centerColor="#ffee00"
                    android:startColor="#3993de"
                    />
            </shape>
        </clip>
    </item>

</layer-list>